<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lucky_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lucky_number_date"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lucky_number_icon"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:textColor="@color/md_dark_primary_text"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lucky_number_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lucky_number"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lucky_number_icon"
        android:gravity="center_horizontal"
        android:textColor="@color/md_dark_primary_text"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/lucky_number_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/log_in"
        android:layout_margin="8dp"
        android:src="@drawable/ic_sentiment_very_satisfied_black_24dp"
        android:tint="@color/md_dark_primary_text" />

    <TextView
        android:id="@+id/log_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/log_in"
        android:textColor="@color/md_dark_primary_text"
        android:visibility="gone" />

</RelativeLayout>